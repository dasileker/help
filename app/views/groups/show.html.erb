<% provide(:title, "Groups") %>
<div class="container justify-content-center d-flex ">
  <div class="card my-5" style="width: 18rem;">
    <%=image_tag(@group.icon,style:"border-radius:1rem;")%>
    <div class="card-body crd-bdy">
      <h5 class="card-title text-center mb-5"> <%= @group.name %></h5>
      <p class="m-0">Projects:</p>
    </div>
    <ul class="list-group list-group-flush">
      <% @group.projects.each do |project| %>
        <li class="list-group-item d-flex justify-content-between" style="font-size:13px;">
          <span class="d-flex flex-column"> <small class="text-muted">Name</small> <%=project.name%></span>
          <span class="d-flex flex-column"><small class="text-muted">Amount</small>$<%=project.duration%></span>
          <span class="d-flex flex-column"><small class="text-muted">Created by</small><%=project.author.name%></span>
          <%= display_eye(project)%>
        </li>
      <% end %>
    </ul>
    <div class="card-body text-center">
      <%= link_to 'javascript:history.back()', class:"card-link text-decoration-none" do %>
        <i class="bi bi-arrow-left-square text-dark"></i>
        <%=display_modify(@group)%>
      <% end %>
    </div>
  </div>
</div>