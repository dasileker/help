
<% provide(:title, "#{@user.name}") %>
<div class="d-flex flex-column align-items-center">
  <div class="user-thumb my-3">
    <%=image_tag(@user.avatar, style:"width:180px; height:180px; border-radius:50%")%>
  </div>
  <div class="user-profile-ul">
    <ul class="list-group">
      <div class="username text-white d-flex justify-content-center nav-link p-2 mt-3"> <%="Hello #{current_user.name.titlecase} ready to start building project?"%></div>
      <li class="list-group-item">
        <%=link_to 'All my Projects', projects_path, class: 'nav-link d-flex justify-content-center bi bi-cash'%>
      </li>
      <li class="list-group-item">
        <%=link_to 'All my External Projects', projects_project_ungrouped_path, class: 'nav-link d-flex justify-content-center bi  bi-cash-stack'%>
      </li>
      <li class="list-group-item">
        <%=link_to 'All groups', groups_path, class: 'nav-link d-flex justify-content-center bi bi-collection-fill'%>
      </li>
      <li class="list-group-item">
        <%=link_to 'Edit your profile', edit_user_path(current_user), class:'d-flex justify-content-center nav-link text-decoration-none bi bi-pencil-square'%>
      </li>
    </ul>
    <p class="text-center">
      <strong class="text-white text-center">Digitally Yours.</strong>
    </p>
  </div>
</div>