<% @projects.each do |project| %>

    <div class="card mb-3 align-self-center " style="max-width: 540px;">
      <div class="row g-0">
        <div class="col-4">
        <%=display_icon(project.groups.take,project)%>
        </div>
        <div class="col-8">
          <div class="card-body h-100">
            <h5 class="card-title d-flex justify-content-between"><span><%= project.name %> </span><span class="fw-bold"><%= project.duration %>hr</span> </h5>
            <p class="card-text position-relative card-date d-flex justify-content-between"><small class="text-muted"><%=verbose_date(project.created_at) %></small><%= link_to project do%>
            <i class="bi bi-eye-fill text-secondary"></i>
            <% end %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% end %>