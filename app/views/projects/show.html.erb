<% provide(:title, "Projects") %>
<div class="container d-flex justify-content-center">
  <div class="card text-center mt-5">
    <div class="card-header">
      <%= @project.name %>
    </div>
    <div class="card-body">
      <h5 class="card-title">Duration : <%= @project.duration %>hr</h5>
      <%= link_to 'javascript:history.back()',class:"text-decoration-none" do %>
        <i class="bi bi-arrow-left-square text-dark"></i>
      <% end %>
      <%= link_to @project, method: :delete, data: { confirm: 'Are you sure you wnat to remove this project?'} do %>
        <i class="bi bi-trash text-dark"></i>
      <% end %>
    </div>
    <div class="card-footer text-muted">
      Created by: <%= @project.author.name %> - <%=time_ago_in_words(@project.created_at.localtime)%> ago
    </div>
  </div>
</div>